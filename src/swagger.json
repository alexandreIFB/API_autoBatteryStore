{
  "openapi": "3.0.0",
  "info": {
    "title": "RentalX Documentation",
    "description": "This is an API Rent",
    "vension": "1.0.0s",
    "contact": {
      "email": "abreuxandi2010@gmail.com"
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": { "type": "http", "scheme": "bearer", "bearerFormat": "JWT" }
    }
  },
  "paths": {
    "/batteries": {
      "post": {
        "tags": [
          "Battery"
        ],
        "summary": "Create a battery",
        "description": "Create a new battery, collaborator admin permision required",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "c20_ah": {
                    "type": "number"
                  },
                  "polarity": {
                    "type": "string"
                  },
                  "cca_a": {
                    "type": "number"
                  },
                  "rc_min": {
                    "type": "number"
                  },
                  "warrantly_m": {
                    "type": "number"
                  },
                  "code": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "c20_ah": 50,
                "polarity": "D/E",
                "cca_a": 60,
                "rc_min":60,
                "warrantly_m": 12,
                "code": "M50JD"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Category battery exist"
          },
          "401": {
            "description": "Token invalid"
          },
          "403": {
            "description": "Collaborator not allowed for this action"
          }
        },
        "security": [{ "bearerAuth": [] }]
      },
      "get": {
        "tags": [
          "Battery"
        ],
        "summary": "Collaborators authenticated list all batteries",
        "description": "List all batteries",
        "responses": {
          "200": {
            "description": "Sucess",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "c20_ah": {
                        "type": "number"
                      },
                      "polarity": {
                        "type": "string"
                      },
                      "cca_a": {
                        "type": "number"
                      },
                      "rc_min": {
                        "type": "number"
                      },
                      "warrantly_m": {
                        "type": "number"
                      },
                      "code": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Token invalid"
          }
        },
        "security": [{ "bearerAuth": [] }]
      }
    },
    "/sessions": {
      "post": {
        "tags": [
          "Session"
        ],
        "summary": "Create a session",
        "description": "Create a new session JWT",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "cpf": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "password": "xandin1234",
	              "cpf": "421455161"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Sucess"
          },
          "400": {
            "description": "CPF or Password not valid"
          }
        }
      }
    }
  }
}